root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[{*.ats,*.ts,*.tsx,*.js,*.jsx,*.css,*.scss}]
indent_size = 2
tab_width = 2
max_line_length = 120

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 2

[{*.yml,*.yaml,*.md}]
indent_size = 2
tab_width = 2
